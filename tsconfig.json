{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": true,
    "noEmit": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "./src/api/*"
      ],
      "@api": [
        "./src/api"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@providers": [
        "./src/providers"
      ],
      "@features/*": [
        "./src/features/*"
      ],
      "@features": [
        "./src/features"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@hooks": [
        "./src/hooks"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@typings": [
        "./src/typings"
      ],
      "@typings/*": [
        "./src/typings/*"
      ],
      "@store": [
        "./src/store"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@translations": [
        "./src/translations"
      ],
      "@translations/*": [
        "./src/translations/*"
      ],
      "@app": [
        "./src/app"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@package-json": [
        "./package.json"
      ],
      "@constants": [
        "./src/constants"
      ],
    },
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules",
    "__tests__",
    "dist"
  ],
  "include": [
    "./src/**/*",
    "./src/**/*.json",
    ".next/types/**/*.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "next-env.d.ts"
  ]
}
